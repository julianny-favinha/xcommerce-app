<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment_method"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <RadioGroup
                android:id="@+id/checkout_radio_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/checkout_radio_button_credit_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_card" />

                <RadioButton
                    android:id="@+id/checkout_radio_button_boleto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/boleto"
                    android:checked="true"/>

            </RadioGroup>

            <Button
                android:id="@+id/checkout_button_add_info_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_info_credit_card"
                android:enabled="false"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
