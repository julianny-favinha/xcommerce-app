<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:maxHeight="250dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/note_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_placeholder" />

        <TextView
            android:id="@+id/note_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            tools:text="SofÃ¡" />

        <TextView
            android:id="@+id/note_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="R$ 970,00" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dec"
                android:layout_width="23dp"
                android:layout_height="24dp"
                android:background="@drawable/badge_circle_red"
                android:text="-"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/note_item_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <Button
                android:id="@+id/btn_inc"
                android:layout_width="23dp"
                android:layout_height="24dp"
                android:background="@drawable/badge_circle_green"
                android:text="+"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/btn_remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remover"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>