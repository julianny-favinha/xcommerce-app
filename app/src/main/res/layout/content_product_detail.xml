<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProductDetailActivity"
    tools:showIn="@layout/activity_product_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_detail_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:adjustViewBounds="true"
                android:src="@drawable/image_placeholder"
                android:contentDescription="@string/text_description_photo" />

            <TextView
                android:id="@+id/product_detail_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15sp"
                tools:text="Código" />

            <TextView
                android:id="@+id/product_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="30sp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                tools:text="Preço" />

            <TextView
                android:id="@+id/product_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Nome" />

            <TextView
                android:id="@+id/product_detail_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Marca" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp" />

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp" />

            <TextView
                android:id="@+id/product_detail_category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="30sp"
                android:text="@string/category"
                tools:text="Categoria" />

            <TextView
                android:id="@+id/product_detail_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                tools:text="Categoria texto" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp" />

            <TextView
                android:id="@+id/product_detail_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="30sp"
                android:text="@string/description"
                tools:text="Descrição" />

            <TextView
                android:id="@+id/product_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                tools:text="Descrição texto" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="75sp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>